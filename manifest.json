{
"update_url": "https://clients2.google.com/service/update2/crx",

	"name": "Genius Spanish Helper",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Ayuda para Genius en Espa√±ol",
	"icons": {
		"180": "icon_180.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://genius.com/*"],
			"js": ["contentScript.js"],
			"css": ["content.css"]
